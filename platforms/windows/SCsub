#!/usr/bin/env python

Import('env')

executable_name = env.executable_name

# TODO put this inside a module please
# Define vulkan library
vulkan_library_name = "vulkan-1"

if env.debug:
    env.Append(CPPDEFINES={'VULKAN_LD_LIBRARY' : 'LD_LIBRARY_PATH=' + env.lunarg_sdk_path})
    env.Append(CPPDEFINES={'VULKAN_EXPLICIT_LAYERS' : 'VK_LAYER_PATH=' + env.lunarg_sdk_path})

env.Prepend(LIBPATH=[env.lunarg_sdk_path])
env.Prepend(LIBS=[vulkan_library_name])
# ~TODO put this inside a module please

if env.debug:
    env.Append(LINKFLAGS=['/DEBUG'] )
    env.Append(CCFLAGS=['/Zi'] )
    executable_name += '.debug.exe'

# Compile executable
env.add_program(env.executable_dir + '/' + executable_name, ['main.cpp'])
